- name: Update hosts file
  template:
    src: hosts_file.j2
    dest: /etc/hosts
    backup: yes
    owner: root
    group: root
    mode: 0644
    
  register: hosts_file
  tags:
    - update_hosts_file

- name: Install EPEL and Newton Repo
  package: name={{item}} state=present
  with_items:
     - yum-utils
     - https://dl.fedoraproject.org/pub/epel/7/x86_64/e/epel-release-7-8.noarch.rpm
     - centos-release-openstack-newton
  register: repo_install
  tags:
    - install_repo

- name: Enable EPEL
  command: yum-config-manager --enable epel
  register: epel
  tags:
    - setup_epel

- name: Install required packages for Newton
  package: name={{item}} state=present
  with_items:
     - vim
     - net-tools
     - python-openstackclient
     - openstack-selinux
     - chrony
     - memcached 
     - python-memcached
  register: req_pkgs
  tags:
    - install_pkgs

- name: Start NTP Service
  service: name=chronyd state=started enabled=yes
  register: ntp_conf
  tags:
    - setup_ntp

- name: Start memcached service
  service: name=memcached state=started enabled=yes
  register: memcache_srv
  tags:
    - start_memcache_srv

- name: Disable NetworkManager and Firewalld
  service: name={{ item }} state=stopped enabled=no
  with_items:
    - NetworkManager
  register: unwanted_service
  tags:
    - disable_unwanted_srv 

- name: Reload network service
  service: name=network state=restarted 
  register: net_srv
  tags:
    - restart_net_srv

- name: OS update
  command: yum upgrade -y
  register: os_update
  tags:
    - os_upgrade 
